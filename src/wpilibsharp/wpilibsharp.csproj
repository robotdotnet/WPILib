<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <AssemblyName>WPILibSharp</AssemblyName>
    <RootNamespace>WPILib</RootNamespace>
    <NoWarn>1701;1702;1591;CA1303;CA1044;CA2225</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="5.0.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="UnitsNet" Version="4.83.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\hal\hal.csproj" />
    <ProjectReference Include="..\ntcore\ntcore.csproj" />
    <ProjectReference Include="..\wpiutil\wpiutil.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="ShuffleboardNS\" />
    <Folder Include="SmartDashboardNS\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="Nullable" Version="1.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
